{
  "apiVersion": "apps/v1beta2",
  "kind": "Deployment",
  "metadata": {
    "labels": {
      "app": "bulletin-board"
    },
    "name": "bulletin-board-deployment"
  },
  "spec": {
    "replicas": 1,
    "selector": {
      "matchLabels": {
        "app": "bulletin-board"
      }
    },
    "template": {
      "metadata": {
        "labels": {
          "app": "bulletin-board"
        }
      },
      "spec": {
        "containers": [
          {
            "command": [
              "npm",
              "start"
            ],
            "image": "wijetnga/bulletin-board:9",
            "name": "bulletin-board",
            "ports": [
              {
                "containerPort": 8080,
                "protocol": "TCP"
              }
            ]
          }
        ]
      }
    }
  }
}
